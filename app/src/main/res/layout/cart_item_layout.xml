<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/de10"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_product"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/d3"
            android:gravity="center"
            android:text="Bí đỏ"
            android:textColor="@color/violet_dark"
            android:textSize="@dimen/ts16" />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="@dimen/d5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginStart="@dimen/d5"
            android:id="@+id/tv_delete"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_gravity="center_vertical"
            android:text="Xóa sản phẩm"
            android:textColor="@color/red"
            android:textSize="@dimen/ts16" />

        <LinearLayout
            android:layout_gravity="right"
            android:layout_marginStart="@dimen/d5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textSize="@dimen/ts16"
                android:text="50000"
                android:id="@+id/tv_price"
                android:layout_marginEnd="@dimen/de10"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/btnSubtract"
                android:layout_width="@dimen/d30"
                android:layout_height="@dimen/d30"
                android:layout_gravity="center"
                android:background="@drawable/border_button_bottomsheet"
                android:src="@drawable/ic_subtract"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="@dimen/ts16" />

            <TextView
                android:id="@+id/tv_quantity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/d3"
                android:gravity="center"
                android:text="Bí đỏ"
                android:textColor="@color/violet_dark"
                android:textSize="@dimen/ts16" />

            <ImageButton
                android:id="@+id/btnAdd"
                android:layout_width="@dimen/d30"
                android:layout_height="@dimen/d30"
                android:layout_gravity="center"
                android:background="@drawable/border_button_bottomsheet"
                android:gravity="center"
                android:src="@drawable/ic_baseline_add_24"
                android:textColor="@color/white"
                android:textSize="@dimen/ts16"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>