<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_list_oder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/d2"
        android:layout_marginHorizontal="@dimen/d5"
        android:background="@drawable/border_order_item"
        android:orientation="vertical"
        android:padding="@dimen/d2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d50"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_oder_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/d5"
                android:drawableStart="@drawable/ic_order"
                android:gravity="center_vertical"
                android:text="2203280001"
                android:textSize="@dimen/ts18" />

            <TextView
                android:id="@+id/tv_time_order"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/d5"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="2022-12-02 11:23:12"
                android:textSize="@dimen/ts18"
                app:drawableStartCompat="@drawable/ic_clock" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorLightGray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/d5"
                android:layout_weight="1"
                android:text="@string/all_order"
                android:textSize="@dimen/ts20"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_order_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center_horizontal"
                android:text="200000"
                android:textSize="@dimen/ts18" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorLightGray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/d5"
                android:text="@string/status"
                android:textSize="@dimen/ts20"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_status_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Chờ xử lý"
                android:textSize="@dimen/ts18" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>